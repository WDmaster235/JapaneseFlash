<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow_gradient_background">

    <!-- Card 1 (bottom) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_kanji_menu"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:rotation="70"
        android:translationX="-60dp"
        android:translationY="-30dp"
        android:text="Go to Kanji Menu"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/purple_200"
        app:cornerRadius="16dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/black" />

    <!-- Card 2 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_saved_cards"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:rotation="70"
        android:translationX="-20dp"
        android:translationY="-10dp"
        android:text="Go to Saved Cards"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/teal_200"
        app:cornerRadius="16dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/black" />

    <!-- Card 3 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_daily_reminder"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:rotation="70"
        android:translationX="20dp"
        android:translationY="10dp"
        android:text="Daily Reminder"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/yellowAccent"
        app:cornerRadius="16dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/black" />

    <!-- Card 4 (top) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_about"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:rotation="70"
        android:translationX="60dp"
        android:translationY="30dp"
        android:text="About Kanji"
        android:textColor="@android:color/black"
        android:backgroundTint="@color/red"
        app:cornerRadius="16dp"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/black" />

</FrameLayout>
