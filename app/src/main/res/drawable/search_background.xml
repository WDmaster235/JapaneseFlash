<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Soft yellow fill to match the screen background -->
    <solid android:color="#FFF8E1" />

    <!-- A subtle stroke in a slightly darker yellow/orange -->
    <stroke
        android:width="1dp"
        android:color="#FFCC80" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
